#!/usr/bin/env bash
set -euo pipefail

echo "[bootstrap] Updating apt and installing Ansible + basics..."
sudo apt-get update -y
sudo apt-get install -y --no-install-recommends ansible git curl ca-certificates

echo "[bootstrap] Running ansible-playbook from local repo..."
ANSIBLE_NOCOWS=1 ansible-playbook \
  -i "localhost," \
  -c local \
  --become \
  "$HOME/.config/ansible/local.yml"

echo "[bootstrap] Done."

